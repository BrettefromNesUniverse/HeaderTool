{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build x64 CLI",
			"command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
			"args": [
				"-m64",   
				"-std=c++17",  
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\binaries\\headertool_x64.exe",
				"-lcurl",
				"-lstdc++",  
				"-lz",  
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\msys64\\mingw64\\bin\\gcc.exe"
		},
		{
			"type": "cppbuild",
			"label": "build x86 CLI",
			"command": "C:\\msys64\\mingw32\\bin\\gcc.exe",
			"args": [
				"-m32",   
				"-std=c++17",  
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\binaries\\headertool_x86.exe",
				"-lcurl",
				"-lstdc++",  
				"-lz",  
				"-D_WIN32_WINNT=0x0601",   // Set Windows 7 as the minimum target version
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\msys64\\mingw32\\bin\\gcc.exe"
		},
		{
            "label": "Build x86 | x64 CLI",
            "dependsOrder": "sequence",
            "dependsOn": ["build x86 CLI", "build x64 CLI"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
	]
}